
@{
    ViewBag.Title = "Index";
}

<script>
    function checkFieldsCliente() {
        //VerificarNombre
        let retorno = false;
        let nombre = document.querySelector("#Nombre").value;
        if (nombre.length < 2) {
            alert("minimo 2 caracteres");
            return retorno;
        }

        retorno = true;
        
         //VerificarApellido
        let apellido = document.querySelector("#Apellido").value;
        if (apellido.length < 2) {
            alert("minimo 2 caracteres");
            retorno = false;
            return retorno;
        }

        //VerificarCedula
        let cedula = document.querySelector("#Cedula").value;
        if (cedula.length < 7 || cedula.length > 9) {
            alert("cedula tiene que tener entre 7 y 9 caracteres");
                retorno = false;
                return retorno;
            }

        //VerificarContrasena
        let cont = document.querySelector("#Password").value;
        let verificacion = /^(?=.*\d)(?=.*[a-záéíóúüñ]).*[A-ZÁÉÍÓÚÜÑ]/
        if (!verificacion.test(cont) || cont.length < 6) {
            retorno = false,
                alert("la clave tiene que tener 6 caracteres una minuscual, una mayuscula y un digito");
            return retorno;
        }

        return retorno;
            
    }
   
    
</script>
<h2>Agregar Cliente</h2>

<form class="form-agregar" method="post" action="/ClienteRegistro/AgregarCliente" onsubmit="return checkFieldsCliente()">
    <div>
        <label for="Nombre">Nombre: </label>
        <input id="Nombre" name="Nombre" required />
    </div>
    <div>
        <label for="Apellido">Apellido: </label>
        <input id="Apellido" name="Apellido" required />
    </div>
    <div>
        <label for="Cedula">Cedula: </label>
        <input type="text" id="Cedula" name="Cedula" required />
    </div>
    <div>
        <label for="Password">Password: </label>
        <input id="Password" name="Password" required />
    </div>
    <input type="submit" value="Agregar" />
</form>


