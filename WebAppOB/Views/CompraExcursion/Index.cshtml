        <td>@ViewBag.Excursion.CantidadDias</td>

        <td>@ViewBag.Excursion.Stock</td>

        <td>
            <table id="secundariaExcursiones">
                <thead>
                    <tr>
                        <th>Ciudad</th>
                        <th>Cantidad de dias</th>
                        <th>Costo diario</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Destino d in ViewBag.Excursion.ListaDestinosDisponibles)
                    {

                        <tr>
